  line-height: 44px;
  font-size: 34px;

  @include breakpoint(sm) {
    padding: 0 $gutter/2;
  }
}

.article-subtitle {
  padding: $gutter/2 0 0;
  margin: 0 0 $gutter * 3;

  @include breakpoint(sm) {
    padding: 0 $gutter/2;
    margin: 0 0 $gutter;
  }

  p {

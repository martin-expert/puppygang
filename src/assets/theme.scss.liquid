.cart-instructions {
  display: block;
  font-size: $body-font-size-1;
  padding: $gutter*2 80px 0 0;
  text-align: left;

  @include breakpoint(md) {
    width: 290px;
    padding: $gutter 0 0;
    margin: auto;
  }

  p {
    text-align: left;
    padding: 0 0 $gutter/2;
  }


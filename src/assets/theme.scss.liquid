  }
}

.clearfix { @extend %clearfix; }

.main-content {
  position: relative;
  z-index: 1;
}

//************************************************************************//
// Module
//************************************************************************//
%module,
.module {
  max-width: $max-width + $gutter-half;
  padding: $gutter-triple $gutter;
  margin: 0 auto;
  text-align: center;

  @include breakpoint(sm) {
    padding-top: $gutter-double;
    padding-bottom: $gutter-double;
  }

  &.page {
    padding-top: $gutter-double;

    @include breakpoint(sm) {
      padding-top: $gutter;

      &.no-content {
        padding-bottom: $gutter;
      }
    }
  }

  &.left-right {
    max-width: 100%;
    padding: $gutter-triple 0;

    &.collection {
      padding-bottom: 0;
    }
  }

  &.full-width {
    max-width: 100%;
    padding: 0;
  }
}

%module-wrapper-border {
  border-bottom: 1px solid $border-color;
}

%module-wrapper,
.module-wrapper {
  position: relative;
  display: block;

  &.border {
    @extend %module-wrapper-border
  }

  &.border.style-color,
  &.border.style-gradient {
    border-bottom: 1px solid $white;
  }
}

.module-header {
  position: relative;
  z-index: 1;
  padding-right: $gutter;
  padding-bottom: $gutter * 3;
  padding-left: $gutter;

  @include breakpoint(sm) { padding-bottom: $gutter * 2; }

  &:only-child{ padding-bottom: 0; }
}

.module-body {
  position: relative;
  z-index: 1;

  @include breakpoint(sm) {
    &.has-header {
      padding: $gutter 0 0;
    }
  }
}

.list-title,
.list-meta,
.list-text,
.list-link,
.module-title,
.module-subtitle,
.module-content {
  .style-color &,
  .style-gradient &,
  .style-image & {
    color: $white;

    a {
      color: currentColor;
      border-bottom: 1px solid currentColor;

     &:hover {
       border-bottom-color: transparent;
     }
    }
  }

  .light-overlay & {
    color: $heading-text-color;
  }
}

%module-title-typography {
  @include font($font-headings);
  font-size: $heading-font-size-2;
  line-height: $heading-font-size-2 + 10;
  color: $heading-text-color;

  @include breakpoint(sm) {
    font-size: $heading-font-size-2-xs;
    line-height: $heading-font-size-2-xs + 10;
  }
}

.module-title {
  @extend %module-title-typography;
  display: block;
  padding: 0;
  margin: 0;
  color: $heading-text-color;
}

.module-subtitle {
  @include font($font-body);
  display: block;
  max-width: 900px;
  padding: $gutter-half 0 0;
  margin: 0 auto;
  color: $body-text-color;
  font-size: $subtitle-font-size;
  line-height: $subtitle-font-size + 10;

  &:first-child {
    padding-top: 0;
  }

  @include breakpoint(sm) {
    font-size: $body-font-size-1;
    line-height: $body-font-size-1 + 10;
  }
}

.module-content {
  display: block;
  font-size: $body-font-size-1;
  line-height: $body-font-size-1 + 10;
  color: $body-text-color;
}

.module-cta {
  display: block;
  padding: $gutter 0 0;
}

.module-cta-subline {
  display: block;
  font-size: $body-font-size-1;
  line-height: $body-font-size-1 + 10;
  padding: $gutter/2 0 0;
}

.module-footer {
  position: relative;
  padding: $gutter 0 0;
  z-index: 1;
}

//************************************************************************//
// List: Column list layout
//************************************************************************//

.list {
  position: relative;
  display: block;
  text-align: center;
  font-size: 0;
  padding-right: $gutter-half;
  padding-left: $gutter-half;
}

.list-item {
  position: relative;
  display: inline-block;
  vertical-align: top;
  text-align: center;
  padding: 0 $gutter-half;
  margin-bottom: $gutter;

  .column-1 & {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .column-2 & {
    width: 50%;

    @media (max-width: 480px) { width: 100%; }
  }

  .column-3 & {
    width: 33.33%;

    @include breakpoint(sm) { width: 50%; }
    @media (max-width: 480px) { width: 100%; }
  }

  .column-4 & {
    width: 25%;

    @include breakpoint(md) { width: 50%; }
    @include breakpoint(xs) { width: 100%; }
  }
}

.list-item-random {
  display: block;
  width: 100%;

  @include breakpoint(sm-up) {
    float: left;
    width: 50%;
  }

  @include breakpoint(md-up) {
    &:nth-child(1) .list-cover {
      padding-bottom: calc(100% + #{$gutter / 2});
    }

    &:nth-child(2) .list-cover {
      padding-bottom: 50%;
    }

    &:nth-child(3n),
    &:nth-child(4n) {
      width: 25%;
    }
  }

  .list-row:nth-child(2n) & {
    &.list-item {
      float: left;

      @include breakpoint(md-up) {
        &:nth-child(1) .list-cover {
          padding-bottom: 50%;
        }

        &:nth-child(2) {
          float: right;
          .list-cover {
            padding-bottom: calc(100% + #{$gutter / 2});
          }
        }

        &:nth-child(3),
        &:nth-child(4) {
          width: 25%;
        }
      }
    }
  }
}

.list-item-inline {
  @include breakpoint(md) {
    padding: $gutter $gutter-half;
  }
}


.list-row {
  float: left;
  width: 100%;

  &:nth-child(2n) {
    .list-item {
      float: right;

      @include breakpoint(sm) {
        float: none;
      }
    }
  }

  @include breakpoint(sm) {
    float: none;
    display: block;
  }
}

.list-container {
  position: relative;
  display: block;
  max-width: 100%;
  color: inherit;
  text-align: center;
}

.list-image-wrapper {
  position: relative;
  display: block;
  max-width: 100%;
  overflow: hidden;
  text-align: center;
}

.list-overlay {
  @include transition(all .2s $ease);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: $primary-color;
  opacity: 0;

  .list-container:focus &,
  .list-container:hover & {
    opacity: 0.85;
  }

  .style-gradient &,
  .style-color & {
    background-color: $white;
  }
}

.list-icon {
  @include border-radius(100%);
  @include transition(all .2s $ease);
  position: absolute;
  top: 50%;
  left: 50%;
  width: $list-icon-size;
  height: $list-icon-size;
  margin-top: - $list-icon-size / 2 + 10;
  margin-left: - $list-icon-size / 2;
  font-size: 24px;
  line-height: $list-icon-size;
  color: $primary-color;
  background-color: $white;
  opacity: 0;

  .list-container:focus &,
  .list-container:hover & {
    margin-top: - $list-icon-size / 2;
    opacity: 1;
  }

  .style-color & {
    color: $white;
    background-color: $primary-color;
  }

  .style-gradient & {
    @include gradient-horizontal();
    color: $white;
  }
}

.list-cover {
  position: relative;

  .list-item-aspected & {
    @include aspect-ratio-bg($aspect: 100%);
  }
}

.list-cover-placeholder {
  background-color: $color-placeholder-background;
}

.list-image {
  @extend %rimg-img-relative;
  height: auto;
  width: 100%;

  .list-item-aspected & {
    @extend %rimg-img-absolute;
  }
}

.list-text-wrapper {
  position: absolute;
  top: 50%;
  left: 0;
  display: block;
  width: 100%;
  padding: $gutter;
  text-align: center;
  //background: rgba($white, 0.9);
  background:transparent;
  opacity: 0;
  transform: translateY(-50%);
  transition: all 0.2s $ease;

  @include breakpoint(md) {
    @include transform(translateY(0));
    top: auto;
    bottom: 0;
    padding: $gutter-half;
    opacity: 1;
    transform: translateY(0);
  }

  @include media($min: $ipad, $max: $md) {
    padding: $gutter-half;
  }

  .list-item-inline &,
  .list-text-wrapper-below & {
    position: relative;
    top: auto;
    bottom: 0;
    padding: $gutter / 2;
    opacity: 1;
    transform: translateY(0);
  }

  .list-item-inline & {
    padding: $gutter / 2 $gutter;
    background-color: transparent;
  }

  .column-3 &,
  .column-4 & {
    padding: $gutter $gutter/2;

    @include breakpoint(md) {
      padding: 50px $gutter-half;
    }
  }

  .list-container:focus &,
  .list-container:hover & {
    opacity: 1;
  }
}

.list-title {
  @include font($font-headings);
  display: block;
  font-size: $heading-font-size-3;
  line-height: 1.5;
  color: $heading-text-color;

  @include breakpoint(md){
    font-size: $body-font-size-1;
  }
}

.list-meta {
  display: block;
  margin-top: 5px;
  font-size: $body-font-size-1;
  line-height: 1.5;
  color: $body-text-color;
  text-transform: uppercase;

  .dynamic-products,
  .dynamic-collections &,
  .collection-list & {
    font-weight: font-weight($font-body, $font-weight: bolder);
    font-style: font-style($font-body, $font-weight: bolder);
    color: $secondary-color;
  }

  @include media($min: $sm, $max: $md){
    font-size: $body-font-size-2;
  }

  @include media($max: $sm) {
    font-size: $body-font-size-3;
  }

}

.list-text {
  display: block;
  margin-top: $gutter-half;
  font-size: $body-font-size-1;
  line-height: $body-font-size-1 + 10;
  color: $body-text-color;

  &:first-child {
    margin-top: 0;
  }
}

.list-cta {
  @include ellipsis();
  position: relative;
  display: block;
  margin-top: $gutter-half;

  &:first-child {
    margin-top: 0;
  }
}

.list-link {
  position: relative;
  display: inline-block;
  font-size: $body-font-size-2;
  line-height: $body-font-size-2 + 10;
  color: $primary-color;
  text-transform: uppercase;
  vertical-align: top;

  &:focus,
  &:hover {
    color: $primary-color;

    .style-color &,
    .style-gradient &,
    .style-image & {
      color: $white;
    }
  }

  &:after {
    @include transition(all 0.2s $ease);
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: $primary-color;
    content: "";

    .style-color &,
    .style-gradient &,
    .style-image & {
      background: $white;
    }
  }
}

.list-button {
  max-width: 100%;
}

//************************************************************************//
// Side: Alternating Layout
//************************************************************************//

.side {
  width: 100%;
  max-width: 100%;
  margin: 0;
  padding: 0;
}

.side-body {
  border-top: 1px solid $border-color;
  border-bottom: 1px solid $border-color;
}

.side-wrapper {
  font-size: 0;
  width: 100%;
}

.side-section {
  display: inline-block;
  width: 50%;
  vertical-align: middle;
  text-align: center;

  @include breakpoint(md) {
    width: 100%;
    display: block;
  }

  .one-child & {
    width: 100%;

    @include breakpoint(sm) {
      max-width: 100%;
    }
  }
}

.side-text-wrapper {
  position: relative;
  display: inline-block;
  width: 100%;
  max-width: $max-width/2;
  padding: $gutter*3 $gutter*2;
  text-align: left;

  @include breakpoint(l) {
    padding: $gutter $gutter;
  }

  @include breakpoint(md) {
    max-width: 700px;
    padding: $gutter*3 $gutter;
    text-align: center;
  }

  @include breakpoint(sm) {
    max-width: 100%;
    padding: $gutter $gutter/2;
  }

  .one-child & {
    max-width: 700px;
    padding: $gutter*3 0;

    @include breakpoint(sm) {
      max-width: 100%;
      padding: $gutter $gutter/2;
    }
  }
}

.side-media-wrapper {
  display: block;
}

.side-title {
  font-size: $heading-font-size-3;
  line-height: $heading-font-size-3 + 10;

  @include breakpoint(sm) {
    font-size: $heading-font-size-3-xs;
    line-height: $heading-font-size-3-xs + 10;
  }

  .one-child & {
    text-align: center;
  }
}

.side-meta {
  font-size: $heading-font-size-4;
  line-height: $heading-font-size-4 + 10;
  text-transform: uppercase;

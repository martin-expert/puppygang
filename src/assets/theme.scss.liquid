  @if ($inset){
    $single-line: "#{$inset} #{$single-line}";
  }

  $single-line: "#{$single-line} #{$blur}";

  @if ($spread){
    $single-line: "#{$single-line} #{$spread}";
  }

  $single-line: "#{$single-line} #{$color}";

  @include css3-prefix('box-shadow', $single-line);
}

@mixin ellipsis() {

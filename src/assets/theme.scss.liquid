  }

  @include breakpoint(sm) {
    padding: $gutter 0;
  }
}

// PRODUCT: SLIDESHOW

.product-slideshow {
  position: relative;
  padding-right: $gutter * 2 / 3;

  @include breakpoint(sm) {
    max-width: 600px;
    padding-right: 0;
    margin-top: $gutter;
    margin-right: auto;
    margin-left: auto;
  }
}

.product-image-container {
  position: relative;
  display: block;
}

.product-big-image {
  position: relative;
  display: block;
  padding: 0;

  @include breakpoint(md) {
    padding-right: 0;
  }

  img {
    display: block;
    margin: 0 auto;
    max-width: 100%;
  }

  &.working {

    img {
      visibility: hidden;
    }
  }

  &.zoom-enabled {
    cursor: pointer;
    cursor: zoom-in;
  }
}

.product-slideshow-loader {
  @extend .add-to-cart-loader;
  left: 50%;
  right: auto;
  z-index: 1;
  display: none;

  .working & {
    display: block;
  }
}

.product-image-zoom {
  position: absolute;
  background-color: white;
  background-repeat: no-repeat;
  display: none;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 10;

  cursor: pointer;
  cursor: zoom-out;

  &.active {
    display: block;
  }
}

.product-thumbnails {
  margin-top: $gutter;
  text-align: center;
  font-size: 0;

  &.hidden {
    visibility: hidden;
  }
}

.product-no-images {
  width: 100%;
}

.product-slideshow-pagination-item {
  @extend %button-reset;
  display: inline-block;
  width: 50px;
  height: 50px;
  padding: 2px;
  margin: 0 10px 10px 0;
  vertical-align: top;
  background: {
    position: center;
    repeat: no-repeat;
    size: cover;
  }
  opacity: 0.5;
  transition: all 0.2s $ease;

  .no-js & {
    cursor: initial;
  }

  &.active {
    opacity: 1;
  }
}

.product-slideshow-pagination-item-image {
  display: none;
}

.product-slideshow-navigation {
  @extend %button-reset;
  position: absolute;
  top: 50%;
  z-index: 2;
  width: $gutter-double;
  height: 60px;
  margin-top: -30px;
  font-size: 28px;
  line-height: 60px;
  color: $primary-color;
  text-align: center;
  cursor: pointer;
  transition: all $slideshowSpeed $ease;

  .no-js & {
    cursor: initial;
  }
}

.product-slideshow-previous {
  left: 0;
}

.product-slideshow-next {
  right: 0;
}

// PRODUCT: INFO WRAP

.product-wrap {
  padding-left: $gutter;
  text-align: left;

  @include breakpoint(sm) {
    padding: 0 $gutter-half;
    text-align: center;

    .product-goal {
      padding-right: 20px;
      padding-left: 20px;
    }
  }
}

// PRODUCT DETAILS

.product-details {

  @include breakpoint(sm) {
    display: none;
  }

  &.mobile {
    display: none;
    text-align: center;

    @include breakpoint(sm) {
      display: block;
      padding-right: $gutter / 2;
      padding-left: $gutter / 2;
    }
  }
}


.product-header {
  display: block;
  margin: 0 0 5px;
}

.product-title {
  padding: 0;
  margin: 0;
  font-size: 34px;
  line-height: 44px;
  color: $heading-text-color;

  a {
    color: inherit;
  }
}

.product-vendor {
  color: $body-text-color;
}

.product-price {
  display: block;
  font-size: 28px;
  line-height: 38px;
  color: $body-text-color;
}

.product-price-compare {
  display: inline-block;
  margin-left: 10px;
  color: $body-text-color;
  font-size: 14px;

  .original {
    text-decoration: line-through;
  }

  span {
    display: inline-block;
    vertical-align: top;
  }

  &.hidden { display: none; }
}

// ADD TO CART BUTTON

.add-to-cart-button {
  @include transition(all 0.2s $ease);
  position: relative;
  opacity: 1;

  .loading & {
    z-index: -1;
    opacity: 0;
  }
}

// PRODUCT FORM

.product-form {
  display: block;
  margin: $gutter 0 0;
}

.product-form-nav {
  display: block;
}

.product-options,
.product-quantity {
  @include breakpoint(sm) {
    width: 100%;
  }
}

.product-options {

  .selector-wrapper {
    float: left;
    width: 45%;
    margin: 0 $gutter/2 $gutter/2 0;

    @include breakpoint(md) {
      width: 100%;
      margin: 0 0 $gutter/2;
    }
  }

  .selected-text {
    @include ellipsis();
    display: block;
    width: 90%;
  }

  label {
    display: none;
  }

  .js-required {
    display: none;

    .js & { display: block; }
  }

  .no-js-required {
    .js & { display: none; }
  }
}

.add-to-cart {
  margin: $gutter/2 0 0;

  @include breakpoint(sm) {
    text-align: center;
  }

  input {
    @include breakpoint(sm) {
      padding-right: 0;
      padding-left: 0;
      width: 290px;
    }
  }
}

.product-form-submit-wrap {
  display: inline-block;
  position: relative;

  @include breakpoint(sm) {
    text-align: center;
  }

  .button.outline:not(:hover) {
    background-color: $white;
  }

  input {
    position: relative;
    z-index: 2;
    white-space: normal;
  }

  .product-form-has-spb & {
    width: 100%;

    @include media($min: $bp-spb) {
      width: 49%;
    }

    input {
      width: 100%;
    }
  }
}

.product-form-add-to-cart {
  .product-form-has-spb & {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;

    @include media($max: $bp-spb) {
      display: block;
    }
  }

}

@include keyframes(rotation) {
  from { @include transform(rotate(0deg)) }
  to { @include transform(rotate(359deg)) }
}

.add-to-cart-loader {
  position: absolute;
  left: 50%;
  top: 50%;
  height: 30px;
  width: 30px;
  margin-left: -15px;
  margin-top: -15px;
  z-index: 1;
  border-left: 3px solid rgba($primary-color, .15);
  border-right: 3px solid rgba($primary-color, .15);
  border-bottom: 3px solid rgba($primary-color, .15);
  border-top: 3px solid rgba($primary-color, .8);
  @include border-radius(100%);
  @include animation(rotation .6s infinite linear);
  @include transition(right 0.2s $ease);

  .loading & {
    right: -45px;
  }
}

.product-cart-message {
  display: none;
  margin-top: $gutter;
  color: $body-text-color;

  .added-error & { color: $error-color; }

  .added-success &,
  .added-error & { display: block; }

  em { color: $body-text-color; }
}

.product-more-info {
  margin: $gutter 0 0;

  @include breakpoint(sm) {
    text-align: center;
  }
}

.product-info-link {

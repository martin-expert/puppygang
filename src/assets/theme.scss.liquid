@mixin media($max: false, $min: false) {
  @if $max {
    @if $min {
      @media screen and (max-width: $max) and (min-width: $min + 1) { @content; }
    } @else {
      @media screen and (max-width: $max) { @content; }
    }
  } @else {
    @media screen and (min-width: $min + 1) { @content; }
  }
}

@mixin breakpoint($point) {
  @if $point == xl {
    @include media($min: $l) { @content; }
  } @else if $point == l {
    @include media($max: $l) { @content; }
  } @else if $point == md-up {
    @include media($min: $md) { @content; }
  } @else if $point == md {
    @include media($max: $md) { @content; }
  } @else if $point == ms {
    @include media($max: $medium-small) { @content; }
  } @else if $point == sm-up {
    @include media($min: $sm) { @content; }
  } @else if $point == sm {
    @include media($max: $sm) { @content; }
  } @else if $point == xs-up {
    @include media($min: $xs) { @content; }
  } @else if $point == xs {
    @include media($max: $xs) { @content; }
  } @else if $point == featured-product {
    @include media($max: $featured-product) { @content; }
  } @else {
    @media (max-width: $point) { @content; }
  }
}


.primary-link {
  height: 20px;
  padding: 0;

  .slide-color-dark &:after { background-color: $black; }
  .slide-color-light &:after  { background-color: $white; }

  .slide-color-light &,
  .slide-color-dark & {
    position: relative;

    &:focus:after,
    &:hover:after {
      position: absolute;
      bottom: -49px;
      left: 0;
      z-index: -1;
      display: block;
      width: 100%;
      height: 1px;
      content: "";
    }
  }
}

.header-navigation-link {
  float: left;
  font-size: $header-font-size;
  line-height: 20px;
  letter-spacing: 1px;
  color: $heading-text-color;

  &:focus,
  &:hover {
    color: $primary-color;
  }

  @media (min-width: 721px) {
    //scss-lint:disable NestingDepth
    &.primary-link {
      .has-slideshow-full-window.slide-color-dark .header:not(.scrolled) .main-header:not(.collapsed-navigation) & {

        &,
        & + .header-navigation-list-arrow {
          color: $black;
        }
      }

      .has-slideshow-full-window.slide-color-light .header:not(.scrolled) .main-header:not(.collapsed-navigation) & {

        &,
        & + .header-navigation-list-arrow {
          color: $white;
        }
      }
    }
  }

  .slide-color-light &,
  .slide-color-dark & {
    position: relative;

    &:focus,
    &:hover {
      opacity: 1;
    }

    &.header-navigation-current:after {
      display: none;
    }
  }

  .slide-color-light .scrolled &,
  .slide-color-dark .scrolled & {
    color: $body-text-color;
    opacity: 1;
  }

  &.header-navigation-current {
    color: $primary-color;
    position: relative;

    &:focus,
    &:hover {
      color: $primary-color;
    }

    &:after {
      content: "";
      position: absolute;
      left: 0;
      bottom: -39px;
      width: 100%;
      height: 1px;
      background-color: $primary-color;
      z-index: -1;

      .header-drawer & {
        display: none;
      }
    }

    .header-bleed-light-colors & {
      font-style: font-style($font-body, $font-weight: bolder);
      font-weight: font-weight($font-body, $font-weight: bolder);
      color: $white;
      opacity: 1;

      &:focus,
      &:hover {
        color: $white;
      }

      &:after {
        background: $white;
      }
    }

    .header-bleed-dark-colors & {
      font-style: font-style($font-body, $font-weight: bolder);
      font-weight: font-weight($font-body, $font-weight: bolder);
      color: $black;
      opacity: 1;

      &:focus,
      &:hover {
        color: $black;
      }

      &:after {
        background: $black;
      }
    }

    .showing-drawer & {
      color: $white;
      font-weight: inherit;

      &:focus,
      &:hover {
        color: $white;
      }
    }
  }

  .header-drawer & {
    @include font($font-headings);
    display: inline-block;
    float: none;
    height: auto;
    margin: 0;
    font-size: $drawer-font-size;
    line-height: $drawer-font-size + 10;
    color: $white;
    text-align: center;
    vertical-align: top;

    &:hover {
      color: $primary-color;
    }


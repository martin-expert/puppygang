  line-height: $body-font-size-1 + 10;
  padding-top: $gutter;
}

.side-cta {
  padding-top: $gutter;

  @include breakpoint(md) {
    padding-top: $gutter;
  }
}

.side-media-wrapper {
  text-align: center;
}

.side-image {
  display: inline-block;
  vertical-align: top;
  max-width: 100%;

  .crop & {
    display: none;

    @include breakpoint(md) {
      display: block;
    }
  }
}

.side-cover {
  @include background-size(cover);
  position: absolute;
  top: 0;
  display: none;
  width: 50%;
  height: 100%;
  background-position: center;
  background-repeat: no-repeat;

  .left & {

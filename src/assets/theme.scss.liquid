// SEARCH

.header-search-toggle {
  .showing-drawer & {
    color: $white;

    &:hover {
      color: $white;
    }
  }

  @include breakpoint(sm) {
    display: none;
  }
}

.header-search-wrapper {
  position: absolute;
  top: 0;
  right: 0;
  width: 400px;
  height: 100%;
  overflow: hidden;

  @include breakpoint(sm) {
    display: none;
  }
}

.header-search-form {
  @include transition(all 0.2s $ease);

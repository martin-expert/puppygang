      .header-bleed-light-colors & {
        color: $white;
        opacity: 0.7;
      }

      .header-bleed-dark-colors & {
        color: $black;
        opacity: 0.7;
      }
    }
  }
}

// ACCOUNT

.header-account-link {

  .collapsed-navigation & {
    display: none;
  }

  @include breakpoint(sm) {
    display: none;
  }
}

// CART

.header-cart-link,
.drawer-toggle {
  @include breakpoint(sm) {
    position: absolute;

// DEFAULT

.collection {
  width: 100%;
  padding: $gutter*3 0;

  @include breakpoint(sm) {
    padding: $gutter 0 0;
  }

  .style-light &,
  .style-color &,
  .style-gradient & {
    margin-top: $gutter*2;
  }

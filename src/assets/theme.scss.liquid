  }
}

.post-comment-success-message {
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
  width: 100%;
  padding: $gutter / 2;
  text-align: center;
  background-color: $success-color;

  a { display: inline-block; }

  .post-comment-message {
    color: $white;
  }
}

.static-cart {
  .empty {
    text-align: center;
  }
}

.cart {
  padding-left: $gutter;
  padding-right: $gutter;

  @include breakpoint(md) {
    padding-right: $gutter / 2;
    padding-left: $gutter / 2;
  }

  @include breakpoint(sm) {
    padding: 0 0 $gutter;
  }
}

.cart-header {
  @include breakpoint(sm) {
    margin-top: $gutter * 2;
  }
}

.cart-items-container {
  display: block;
  padding: 0 80px 0 0;

  @include breakpoint(md) {
    width: 520px;
    padding: 0;
    margin: auto;
  }

  @include breakpoint(sm) {
    width: 100%;
  }

  .order & {
    padding: 0;
  }
}

// TABLE

.cart-items {
  width: 100%;
  margin-top: 0;
  border-collapse: collapse;
  border: 0;
  @include transition(height 0.2s $ease);

  &.empty {
    height: 0;
    overflow: hidden;
  }

  thead {
    @include breakpoint(md) {
      display: none;
    }
  }

  th {
    @include font($font-body, $font-weight: lighter);
    padding: 20px 0;
    color: $heading-text-color;
    text-align: left;
    border-top: 0;
    border-bottom: 1px solid $border-color;

    &.first {
      padding-left: 0;
    }

    &.last {
      padding-right: 0;
      text-align: right;
    }
  }

  tr:nth-child(odd) {
    @include breakpoint(md) {
      background-color: $very-light-grey;
    }
  }

  tr:nth-child(even) {
    @include breakpoint(md) {
      background-color: $light-grey;
    }
  }

  .mobile-only {
    display: none;

    @include breakpoint(md) {
      display: inline-block;
    }
  }
}

.cart-item {
  position: relative;
  @include transition(opacity 0.3s ease-in, height 0.3s ease-in);

  &.removing {
    opacity: 0;
  }
}

.cart-item-td {
  width: 15%;
  padding: 40px 0;
  line-height: 1;
  text-align: left;
  color: $body-text-color;
  vertical-align: middle;
  border: 0;
  border-bottom: 1px solid $border-color;

  @include breakpoint(md) {
    float: left;
    width: 520px;
    padding: $gutter/2 $gutter/2 0;
    margin: 0;
    border: 0;
    color: $body-text-color;
    text-align: center;

    &:first-child {
      padding-top: $gutter;
    }

    &:last-child {
      padding-bottom: $gutter/2;
    }
  }

  @include breakpoint(sm) {
    width: 100%;
  }
}

.cart-item-quantity-wrapper {
  @include breakpoint(md) {
    width: 100%;
    margin: auto;
  }

  @include breakpoint(sm) {
    width: 100%;
  }
}

.cart-title {
  a {
    font-size: 14px;
    font-style: font-style($font-body, $font-weight: bolder);
    font-weight: font-weight($font-body, $font-weight: bolder);
    letter-spacing: 2px;
    color: $secondary-color;
    text-transform: uppercase;
  }
}

.cart-item-unit-price {
  @include breakpoint(md) {
    text-align: center;
  }
}

.cart-item-product {
  width: 55%;

  @include breakpoint(md) {
    width: 100%;
    text-align: center;
  }
}

.cart-item-product-wrap {
  display: inline-block;
  margin-left: $gutter/2;
  vertical-align: middle;

  @include breakpoint(l) {
    max-width: 250px;
  }

  @include breakpoint(md) {
    width: 100%;
    max-width: 100%;
    margin: 0;
  }

  span {
    display: block;
    padding: 5px 0 0;
  }
}

.cart-item-image-container {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  width: 80px;

  @include breakpoint(md) {
    display: block;
    width: 100%;
    padding-bottom: $gutter/2;
    text-align: center;
  }
}

.cart-item-total-container {
  position: relative;
  display: block;
  text-align: right;

  @include breakpoint(md) {
    text-align: center;
    padding-bottom: $gutter/2;
  }
}

.cart-image {
  display: inline-block;
  width: 100%;
  vertical-align: middle;

  @include breakpoint(sm) {
    display: block;
    width: 100px;
    margin: 0 auto $gutter/2;
  }
}

.cart-item-image {
  display: block;
  max-width: 100%;
  margin: 0 auto;
}

.cart-item-remove {
  position: absolute;
  left: 100%;
  top: 50%;
  width: 40px;
  height: 40px;
  margin: -20px 0 0 30px;
  vertical-align: middle;
  color: $primary-color;
  text-align: center;
  cursor: pointer;

  @include breakpoint(md) {
    left: auto;
    top: -25px;
    right: -10px;
    margin: 0;
    display: none;
  }

  .icon {
    width: 100%;
    height: 100%;
    line-height: 40px;
    font-size: 28px;
  }

  &.mobile-only {
    display: none;

    @include breakpoint(md) {
      display: block;
    }
  }

  &:hover {
    color: $primary-color;
  }
}

// TOTALS

.cart-tools {
  position: relative;
  display: block;
  text-align: right;
}

.cart-totals {
  @extend .clearfix;
  display: block;
  margin: 0;
  padding: 0 80px 0 0;
  text-align: right;

  @include breakpoint(md) {
    padding: 0;
  }
}

.cart-price-info {
  color: $heading-text-color;

  @include breakpoint(md) {
    text-align: center;
  }
}

.sub-total,
.cart-price {
  padding: 0;
}

.cart-message,
.cart-currency-note {
  display: block;
  padding: 0;
  line-height: 23px;
  font-size: 13px;
  font-style: font-style($font-body, $font-style: italic);
  color: $body-text-color;
  text-align: right;

  @include breakpoint(md) {
    display: block;
    margin: auto;
    max-width: 320px;
    text-align: center;
  }
}

.cart-price {
  font-size: $heading-font-size-2;
  line-height: $heading-font-size-2 + 10;
  color: $heading-text-color;
}

// CTA

.cart-cta {
  margin-top: $gutter;
  @include breakpoint(md) {
    max-width: 320px;
    margin-right: auto;
    margin-left: auto;
    text-align: center;
  }

  input { vertical-align: middle; }
}

.cart-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: $button-min-width;


  @include breakpoint(md) {
    padding-right: 0;
    padding-left: 0;
    margin-top: $gutter / 2;
    text-align: center;
  }

  @include breakpoint(md-up) {
    &.cart-update-button {
      margin-right: $gutter / 2;
    }
  }

  &:last-child { margin-right: 0; }


.collection-button {
  @include breakpoint(sm) {
    width: 290px;
    padding-right: 0;
    padding-left: 0;
    text-align: center;
  }
}

.collection-list {
  width: 100%;
  margin-top: $gutter;
}

.collection-subtitle {
  padding: $gutter $gutter 0;

  @include breakpoint(sm) {
    padding: $gutter $gutter/2 0;
  }
}


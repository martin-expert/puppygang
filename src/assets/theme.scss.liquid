    margin: 0 auto;
  }

  &:before {
    @include launch-icons(16px);
    position: relative;
    display: inline-block;
    color: $primary-color;
  }

  &:hover:before {
    color: $primary-color;
  }

  &.info:before {
    content: $icon-info;
  }

  &.question-mark:before {
    content: $icon-questionmark;
  }

  &.ruler:before {
    content: $icon-ruler;
  }

  &.envelope:before {
    content: $icon-email;
  }

  &.pencil:before {
    content: $icon-pencil;
  }

  &.shirt:before {
    content: $icon-shirt;
  }

  a {
    display: inline-block;
    margin-left: 5px;
  }
}

.product-view-details {
  @include font($font-buttons);
  display: inline-block;
  margin-top: $gutter;
  font-size: 12px;
  line-height: 1.2;
  color: $heading-text-color;
  text-transform: uppercase;

  @include breakpoint(sm) {

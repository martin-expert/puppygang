  .cart-modal-title { @extend %modal-title; }
  .cart-modal-action { @extend %modal-action-button; }
}

.cart-item-undo {
  @include breakpoint(sm) {
    text-align: center;
  }
}

.cart-undo {
  cursor: pointer;
  color: $primary-color;


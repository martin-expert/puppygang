  @include transition(all 0.2s $ease);
  @include font-smoothing(none);
  position: relative;
  display: inline-block;
  padding: $gutter-half $gutter;
  font-size: 12px;
  line-height: 22px;
  letter-spacing: 2px;
  color: $primary-color;
  text-align: center;
  text-transform: uppercase;
  vertical-align: top;
  cursor: pointer;
  background-color: transparent;
  border: 1px solid $primary-color;

  @include breakpoint(sm) {
    text-align: center;
  }

  &:hover {
    background: $primary-color;
    border-color: $primary-color;
    color: $white;
  }

  &.secondary {
    background: transparent;
    border-color: $secondary-color;
    color: $secondary-color;

    &:hover {
      background: $secondary-color;
      border-color: $secondary-color;
      color: $white;
    }

    &.inverse {
      background: $secondary-color;
      border-color: $secondary-color;
      color: $white;

      &:hover {
        background: transparent;
        border-color: $secondary-color;
        color: $secondary-color;
      }
    }
  }

  &.inverse {
    background: $primary-color !important;
    border-color: $primary-color !important;
    color: #fff !important;

    &:hover {
      background: darken($primary-color,5%) !important;
      border-color: darken($primary-color,5%) !important;
    }
  }

  &.disabled {
    background: $border-color;
    color: $body-text-color;
    border-color: $border-color;
    opacity: 1;
    cursor: default;

    &:hover {
      background: $border-color;
      color: $body-text-color;
      border-color: $border-color;
      opacity: 1;
      cursor: default;
    }
  }

  .style-color &,
  .style-gradient &,
  .overlay-none &,
  .overlay-black &,
  .overlay-color &,
  .overlay-gradient &,
  .overlay-primary & {
    background: $white;
    border-color: $white;
    color: $primary-color;

    &:focus,
    &:hover {
      background: $primary-color;
      border-color: $primary-color;
      color: $white;
    }
  }

  .overlay-secondary & {
    background: $white;
    border-color: $white;
    color: $secondary-color;

    &:focus,
    &:hover {
      background: $secondary-color;
      border-color: $white;
      color: $white;
    }
  }

  .icon {
    @include launch-icons(18px);
    display: inline-block;
    color: inherit;
    vertical-align: top;
  }

  .icon-arrow-right {
    font-size: 13px;
  }

// STICKY HEADER

body {
  &.has-sticky-header {
    padding-top: $header-height;

    @include breakpoint(sm) { padding-top: 0; }

    &.has-goal-enabled {
      padding-top: $header-height + $header-goal-height;

      @include breakpoint(sm) { padding-top: 0; }

      .no-js & {
        padding-top: $header-height;

        @include breakpoint(sm) { padding-top: 0; }
      }

      &.has-goal-expired { padding-top: $header-height; }
    }

    &.has-slideshow-full-window {
      padding-top: 0;
    }
  }
}

// HEADER

.header {
  @include transition(background 0.2s $ease);
  position: relative;
  display: block;
  width: 100%;

  .has-slideshow-full-window & {
    top: 0;
    right: 0;
    left: 0;
    position: absolute;
    box-shadow: none;
    background: none;

    @include breakpoint(sm) { position: relative; }
  }

  .showing-drawer.has-slideshow-full-window & { position: relative; }

  .showing-drawer & {
    height: 100vh;
    overflow-y: auto;
    background-color: rgba($dark-color, 0.98) !important;
  }

  &.sticky-header {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    width: 100%;
    transition: (
      top 0.1s $ease,
      background-color 0.2s $ease
    );

    @include breakpoint(sm-up) {
      transition: background-color 0.2s $ease;

      &.scrolled {
        background-color: rgba($white, 0.9);
      }

      &.header-bleed-light-colors {
        background-color: rgba($black, 0.4);
      }

      &.lower-than-slideshow {
        background-color: rgba($white, 0.9);

        &.header-bleed-light-colors {
          background-color: rgba($black, 0.4);
        }
      }
    }

    .showing-drawer & { position: fixed; }

    @include breakpoint(sm) {
      position: relative;
      top: auto;
      left: auto;
    }

    .has-goal-enabled & {
      top: $header-goal-height;

      @include breakpoint(sm) { top: auto; }
    }

    .has-goal-expired & { top: 0; }

    .no-js .has-goal-enabled &,
    .showing-drawer &,
    .template-index & {
      top: 0;
    }
  }
}

.main-header-wrapper {
  position: relative;
  max-width: $max-width + ($gutter * 2);
  padding-right: $gutter;
  padding-left: $gutter;
  margin: 0 auto;
  z-index: 110;

  @include breakpoint(l) {
    padding-right: 0;
    padding-left: 0;
  }
}

.main-header {
  position: relative;
  padding: 0;
  height: $header-height;
  z-index: 3;
  border-bottom: 1px solid $border-color;

  &:after,
  &:before {
    @include transition(border-bottom-color 0.2s $ease);
    position: absolute;
    top: $header-height - 2px;
    left: 100%;
    width: 0;
    height: 1px;
    border-bottom: 1px solid $border-color;
    content: "";

    .showing-drawer & {
      border-bottom-color: rgba($white, 0.25);
    }
  }

  &:after {
    right: 100%;
    left: auto;
  }

  .scrolled & {
    &:after,
    &:before {
      width: 100%;
    }
  }

  .no-border & {
    border: 0;
  }

  .higher-than-slideshow & {
    background: none;
    border-color: rgba($border-color, 0.25);
  }

  .showing-drawer & {
    border-color: rgba($white, 0.25);
  }

  @include breakpoint(l) {
    padding: 0 $gutter;
  }

  @include breakpoint(sm) {
    height: $header-small-height;
    padding: 0;
    text-align: center;
    overflow: hidden;
  }

  @extend .clearfix;
}

// NAVIGATION

.header-tools {
  height: $header-height;
  float: right;

  .header-search-wrapper.active + & {
    opacity: 0;
  }

  @include breakpoint(sm) {
    float: none;
  }
}

.header-actions {
  position: relative;
  line-height: $header-height;
  height: $header-height;
  display: inline-block;
  align-items: center;
  vertical-align: top;
  text-align: left;

  &:before {
    @include transition(background-color .2s $ease);
    display: inline-block;
    width: 1px;
    height: 16px;
    margin: 0 10px;
    vertical-align: middle;
    background-color: $border-color;
    content: "";

    .showing-drawer & {
      background-color: rgba($white, 0.25);
    }

    .higher-than-slideshow & {
      background-color: rgba($border-color, 0.25);
    }

    .lower-than-slideshow & {
      background-color: $body-text-color;
    }
  }

  @include breakpoint(sm) {
    position: static;
    display: block;
    height: auto;
    text-align: center;
  }
}

.header-actions-list {
  display: inline-block;
  vertical-align: middle;
}

.header-actions-list-item {
  @include launch-icons(21px);
  @include transition(color 0.2s $ease);
  position: relative;
  float: left;
  padding: 0;
  margin-left: $gutter;
  line-height: 21px;
  color: $heading-text-color;
  cursor: pointer;

  @media (min-width: 721px) {
    .has-slideshow-full-window.slide-color-dark:not(.drawer-visible) .header:not(.scrolled) & { color: $black; }
    .has-slideshow-full-window.slide-color-light:not(.drawer-visible) .header:not(.scrolled) & { color: $white; }
  }

  .slide-color-light .scrolled &,
  .slide-color-dark .scrolled & {
    color: $heading-text-color;
  }

  @include breakpoint(sm) {
    padding: 0;
  }

  &:first-child {
    padding: 0 0 0 $gutter/2;
  }

  &:hover {
    color: $primary-color;

    @media (min-width: 721px) {
      .header-bleed-light-colors & {
        color: $white;
      }

      .header-bleed-dark-colors & {
        color: $black;
      }
    }
  }

  // Static minimum widths are needed so that header calculations are accurate
  &.icon-cart:before,
  &.icon-head:before {
    min-width: 1em;
  }
}

.collapsed-navigation {
  .header-actions:before {
    display: none;
  }
}

// CURRENCY SWITCHER

.header-currency-switcher {
  margin-left: 20px;
  opacity: 1;

  .slide-color-light &,
  .slide-color-dark & {
    opacity: 1;
  }

  @include breakpoint(sm) {
    display: none;
  }

  .select-wrapper-dropdown {
    max-height: none;
  }

  .showing-drawer & {
    display: none;
  }
}

// HEADER

.header-currency-switcher {
  .select-wrapper {
    @include font($font-body);
    position: relative;
    display: block;
    height: 21px;
    padding-right: 20px;
    margin: 0;
    font-size: $header-font-size - 3;
    line-height: 21px;
    background: none;
    border: 0;
    color: $heading-text-color;

    &:after {
      right: 0;
      line-height: 21px;
      color: $heading-text-color;

      @media (min-width: 721px) {
        .has-slideshow-full-window.slide-color-dark .header:not(.scrolled) & { color: $black; }
        .has-slideshow-full-window.slide-color-light .header:not(.scrolled) & { color: $white; }
      }
    }

    &:hover:after,
    &:hover {
      color: $primary-color;
    }

    &.active {
      overflow: hidden;
      outline: $outline-setting;
    }

    @media (min-width: 721px) {
      .has-slideshow-full-window.slide-color-dark .header:not(.scrolled) & { color: $black; }
      .has-slideshow-full-window.slide-color-light .header:not(.scrolled) & { color: $white; }
    }
  }

  .selected-currency {
    @include font($font-body);
    position: relative;
    height: 100%;
    min-width: 30px;
    padding: 0;
    font-size: $header-font-size - 3;
    line-height: inherit;
    letter-spacing: 2px;
  }

  .select-wrapper-dropdown {
    @include border-radius(5px);
    top: -13px;
    margin-left: -10px;
    padding: 45px 0 0;
    z-index: 1;
  }
}

// DRAWER

.drawer-currency-switcher {
  display: block;
  margin: 0 0 $gutter 0;
}

.drawer-currency-switcher .select-wrapper {
  display: inline-block;
  width: 220px;
  height: 44px;
  padding: 0;
  margin: 0;
  vertical-align: top;
  line-height: 44px;
  font-size: $drawer-font-size;

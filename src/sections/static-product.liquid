            button
            add-to-cart-button
            {% if show_spb %}outline{% else %}inverse{% endif %}
          " type="submit" value="{{ add_to_cart_button | strip_newlines | strip_html | strip }}" />
            <div class="add-to-cart-loader"></div>
          </div>

          {% if show_spb %}
          {{ form | payment_button }}
          {% endif %}
        </div>

        <div class="product-cart-message" data-product-message></div>
        {% else %}
        <input type="submit" class="button outline disabled" disabled="disabled" value="{{ 'products.product.sold_out' | t }}" />
        {% endif %}
      </div>
      <div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>
